<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:EternalModManager"
             x:Class="EternalModManager.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <!-- Set dark mode -->
    <Application.Styles>
        <FluentTheme Mode="Dark"/>
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
    </Application.Styles>

    <!-- App name -->
    <Application.Name>EternalModManager</Application.Name>

    <!-- Override native menu -->
    <NativeMenu.Menu>
        <NativeMenu/>
    </NativeMenu.Menu>
</Application>
